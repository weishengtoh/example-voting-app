pipeline{
    agent none

    stages{
        stage('build'){
            agent{
                docker{
                    image 'node:8.16.0-alpine'
                }
            }
            when{
                changeset '**/result/**'
            }
            steps{
                echo 'Compiling result app...'
                dir('result'){
                    sh 'npm install'
                }
            }

        }
        stage('test'){
            agent{
                docker{
                    image 'node:8.16.0-alpine'
                }
            }
            when{
                changeset '**/result/**'
            }
            steps{
                echo 'Running Unit Tests on result app...'
                dir('result'){
                    sh 'npm install'
                    sh 'npm test'
                }
            }
        }
        stage('docker-package'){
            agent any
            when{
                changeset "**/result/**"
                branch 'master'
            }
            steps{
                echo 'Packaging result app with Docker'
                script{
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerlogin'){
                        def workerImage = docker.build("weishengtoh/result:v${env.BUILD_ID}", './result')
                        workerImage.push()
                        workerImage.push("${env.BRANCH_NAME}")
                        workerImage.push('latest')
                    }
                }
            }
        }
    }

    post{
        always{
            echo 'The pipeline run has completed...'
        }
        failure{
            slackSend(channel: 'jenkins-instavote', message: "Build Failed - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)")
        }
        success{
            slackSend(channel: 'jenkins-instavote', message: "Build Succeeded - ${env.JOB_NAME} ${env.BUILD_NUMBER} (<${env.BUILD_URL}|Open>)")
        }
    }
}